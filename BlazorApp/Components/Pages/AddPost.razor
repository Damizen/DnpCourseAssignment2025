@page "/posts/add"
@using ApiContracts.Posts
@using BlazorApp.Service
@inject IPostService PostService

<h3>Create New Post</h3>

<EditForm Model="newPost" OnValidSubmit="HandleSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label>User ID:</label>
        <InputNumber @bind-Value="newPost.UserId" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Title:</label>
        <InputText @bind-Value="newPost.Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Body:</label>
        <InputTextArea @bind-Value="newPost.Body" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Add Post</button>
</EditForm>

@if (!string.IsNullOrEmpty(statusMessage))
{
    <p class="mt-3 text-success">@statusMessage</p>
}

@code {
    private CreatePostDto newPost = new();
    private string? statusMessage;

    private async Task HandleSubmit()
    {
        try
        {
            await PostService.AddPostAsync(newPost);
            statusMessage = "Post created successfully!";
            newPost = new(); // reset form
        }
        catch (Exception e)
        {
            statusMessage = $"Error: {e.Message}";
        }
    }
}